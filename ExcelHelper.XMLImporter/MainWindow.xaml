<Window x:Class="ExcelHelper.XMLImporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelHelper.XMLImporter"
        mc:Ignorable="d"
        Title="XML Importer" Height="450" Width="800">
    <Grid>
        <Grid Width="400" HorizontalAlignment="Left">
            <TreeView Margin="10,10,10,10" Background="White" x:Name="treeView" SelectedItemChanged="TreeView_SelectedItemChanged"/>
        </Grid>
        <Grid Width="400" HorizontalAlignment="Right">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Output Preview:" VerticalAlignment="Top" Width="90" Margin="155,10,155,0"/>
            <Button Content="Write data to sheet" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="148,0,148,10"/>
            <DataGrid Margin="10,50,10,50" Name="dataGrid"/>
        </Grid>
    </Grid>
</Window>
