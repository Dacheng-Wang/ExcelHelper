<Window x:Class="ExcelHelper.XMLImporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelHelper.XMLImporter"
        mc:Ignorable="d"
        Title="XML Importer" Height="450" Width="800" Name="xMLWindow">
    <Grid>
        <Grid Width="200" HorizontalAlignment="Left" Name="treeGrid">
            <TreeView Margin="10,10,10,10" Background="White" x:Name="treeView" SelectedItemChanged="TreeView_SelectedItemChanged" FrameworkElement.SizeChanged="Window_Resize"/>
        </Grid>
        <Grid Width="600" HorizontalAlignment="Right" Name="previewGrid">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Output Preview:" VerticalAlignment="Top" Width="90" Margin="155,10,155,0"/>
            <Button Content="Write preview data to cell" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,148,10"/>
            <DataGrid Margin="10,50,10,50" Name="dataGrid"/>
            <Button Content="Write all data to cell" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="148,0,0,10"/>
        </Grid>
    </Grid>
</Window>