<Window x:Class="ExcelHelper.XMLImporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelHelper.XMLImporter"
        mc:Ignorable="d"
        Title="XML Importer" Height="800" Width="600" Name="xMLWindow" Style="{DynamicResource MyWindowStyle}" FontSize="14">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TextBlock Text="Output Preview:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" FontSize="20"/>
        <WebBrowser Name="xmlViewer" Margin="10,50,10,50"/>
        <Button Name="btnImport" Content="Import Data To Selected Cell" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Style="{StaticResource MyButtonStyle}" Width="200"/>
        
    </Grid>
</Window>